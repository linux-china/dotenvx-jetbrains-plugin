<idea-plugin>
    <depends>com.intellij.properties</depends>
    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.declarativeInlayProvider language="Properties"
                                              implementationClass="com.github.linuxchina.dotenvx.hints.DotenvxPropertiesInlayHintsProvider"
                                              isEnabledByDefault="true"
                                              group="VALUES_GROUP"
                                              providerId="dotenvx.implicit.properties"
                                              bundle="messages.DotenvxBundle"
                                              nameKey="dotenvx.implicit.value.inlay.provider.name"/>
        <intentionAction>
            <className>com.github.linuxchina.dotenvx.intentions.EncryptPropertiesValueIntention</className>
            <category>Dotenvx</category>
            <language>Properties</language>
        </intentionAction>
    </extensions>
</idea-plugin>