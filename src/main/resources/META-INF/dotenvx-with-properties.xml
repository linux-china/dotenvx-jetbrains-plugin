<!--suppress PluginXmlI18n -->
<idea-plugin>
    <depends>com.intellij.properties</depends>
    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.declarativeInlayProvider language="Properties"
                                              implementationClass="com.github.linuxchina.dotenvx.hints.DotenvxPropertiesInlayHintsProvider"
                                              isEnabledByDefault="true"
                                              group="VALUES_GROUP"
                                              providerId="dotenvx.implicit.properties"
                                              bundle="messages.DotenvxBundle"
                                              nameKey="dotenvx.implicit.value.inlay.provider.name"/>
        <codeInsight.lineMarkerProvider language="Properties"
                                        implementationClass="com.github.linuxchina.dotenvx.marker.PropertiesFileLineMarkerProvider"/>
        <annotator language="Properties"
                   implementationClass="com.github.linuxchina.dotenvx.highlight.PropertiesFileHighlighterAnnotator"/>
        <localInspection language="Properties"
                         shortName="PropertiesFileSensitiveValueInspection"
                         displayName="Sensitive value is not encrypted"
                         groupPath="Dotenvx"
                         enabledByDefault="true"
                         implementationClass="com.github.linuxchina.dotenvx.inspections.PropertiesSensitiveValueInspection"/>
        <intentionAction>
            <className>com.github.linuxchina.dotenvx.intentions.EncryptPropertiesValueIntention</className>
            <category>Dotenvx</category>
            <language>Properties</language>
        </intentionAction>
        <intentionAction>
            <className>com.github.linuxchina.dotenvx.intentions.EditPropertiesValueIntention</className>
            <category>Dotenvx</category>
            <language>Properties</language>
        </intentionAction>
    </extensions>
</idea-plugin>